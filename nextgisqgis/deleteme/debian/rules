#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

#DPKG_EXPORT_BUILDFLAGS = 1
#include /usr/share/dpkg/default.mk

# смотрите FEATURE AREAS в dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@ --buildsystem cmake
	
DEB_UPSTREAM_VERSION_PATCH := $(shell dpkg-parsechangelog \
	| sed -rne 's/^Version: [0-9.]+\.([0-9]+)[-+].*$$/\1/p')

CMAKE_OPTS :=

override_dh_auto_configure:
	dh_auto_configure -- $(CMAKE_OPTS)

override_dh_auto_install:
	dh_auto_install

	# Install desktop files
	install -o root -g root -d $(CURDIR)/debian/tmp/usr/share/applications
	install -o root -g root -m 644 $(CURDIR)/debian/ngqgis.desktop $(CURDIR)/debian/tmp/usr/share/applications

