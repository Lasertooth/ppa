DEB_CMAKE_EXTRA_FLAGS := -DSKIP_DEFAULTS=ON \
                         -DBUILD_SHARED_LIBS=ON \
                         -DBUILD_STATIC_LIBS=ON \
                         -DWITH_EXPAT=ON -DWITH_GeoTIFF=ON \
